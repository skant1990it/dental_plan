    <div class="width650">
        <div class="grid100 change-password" ng-controller="tincontroller"> 
              <fieldset>
                 <div id="msg" class="align-center" style="color:#555555;font-family:open_sansregular;font-size:12px;" ng-bind="message"><a> {{ message }}</a></div> 
            	<div layout="row" layout-align="center center">
                	<h2>Enter your Tin </h2>
                </div>
                <div layout="row" layout-align="center center" class="align-center">
                	<h3>Just for tax purpose</h3>
                </div>
                <md-input-container class="md-block">
                    <label>My Tin is</label>
                    <input name="tinnoenter" type="text" ng-model="password.tinnoenter" required>
                      <div ng-show="tinForm.$submitted || tinForm.tinnoenter.$touched">
                          <span ng-show="tinForm.tinnoenter.$error.required">Enter Tin .</span>
                     </div>
                </md-input-container>
                <div layout="row" layout-align="center center">
                	<md-button class="md-warn md-raised save-button" ng-click=onTinSubmit(tinForm)>Submit</md-button>
                </div>
             </form>
            </fieldset>
            
        </div>
    </div>


