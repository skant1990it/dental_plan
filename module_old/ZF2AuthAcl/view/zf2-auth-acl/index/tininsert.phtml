<script type="text/javascript">    
var app=angular.module('BlankApp', ['ngMaterial']);
 app.controller('tincontroller',function($scope,$http,$window){
      $scope.onTinSubmit=function($valid){
      if($scope.tinForm.$valid){
         $http.post('/tininsert',$scope.password).success(function(data,status){
         //$window.location.href=  '/register' ;
         $window.tinForm.submit();
         })
      }else{
        $scope.message= 'Please fill the form details'; 
      }
    };
});
</script>
